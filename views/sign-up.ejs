<%- include('index') %>

<main>
    <h1 style="text-align: center; color:gray;">Sign-Up</h1>
    <div class="form">
        <form method="POST" action=" ">
            <label for='username'>Email:</label>
            <input type="email" id="username" name="username" placeholder="Email" required /><br/>
            <label for='name'>Username:</label>
            <input type="text" id="name" name="name" placeholder="Name" required /><br/>
            <label for='password'>Password:</label>
            <input type="password" id="password"  minlength="3" name="password" required /><br/>
            <label for='confirm_pw'>Confirm Password:</label>
            <input type="password" id="confirm_pw"  minlength="3" name="confirm_pw" required /><br/>
            <button type="submit" >Submit</button>
        </form>
    </div>
    <p><%=msg %></p>
    <div>
        <% if(typeof errors != 'undefined'){ %>
              <ul>
             <%   for(let i=0 ; i < errors.length ;i++){ %>
                      <li><%=errors[i].msg %></li>
             <%     } %>
              </ul>
        <%  } %>
      </div>
</main>